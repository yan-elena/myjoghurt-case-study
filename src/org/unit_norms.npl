scope valve_norms {

    norm n1: fill_bottle(L, N) & .my_name(V)
        -> obligation(V, n1, fill(L, N), `5 seconds`)
        if unfulfilled: s1(L, N), s2.

    // adjust its flow rate estimation -> directed sanction
    sanction-rule s1(L, N) : adjust(M) & .my_name(V)
        ->  sanction(V, adjust_flow_rate(L, N, M)) .

    // activate the valve's self cleaning routine -> directed sanction
    sanction-rule s2: self_cleaning & .my_name(V)
        -> sanction(V, self_cleaning) .
}